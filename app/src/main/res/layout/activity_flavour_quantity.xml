        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextQShrimp"
        app:layout_constraintTop_toBottomOf="@+id/editTextQShrimp" />

    <Button
        android:id="@+id/buttonMinusWhitebaitQ"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:background="@color/colorBtnPlusMinus"
        android:text="@string/ButtonMinus"
        app:layout_constraintStart_toEndOf="@+id/editTextQWhitebait"
        app:layout_constraintTop_toTopOf="@+id/editTextQWhitebait" />

    <Button
        android:id="@+id/buttonPlusSGQ"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorBtnPlusMinus"
        android:text="@string/ButtonPlus"
        app:layout_constraintEnd_toStartOf="@+id/editTextQSG"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewSpicyGarlic"
        app:layout_constraintTop_toTopOf="@+id/editTextQSG" />

    <EditText
        android:id="@+id/editTextQSG"
        android:layout_width="79dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorWhite"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextQWhitebait"
        app:layout_constraintTop_toBottomOf="@+id/editTextQWhitebait" />

    <Button
        android:id="@+id/buttonMinusSGQ"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
