<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlavourQuantityActivity">

    <TextView
        android:id="@+id/textViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="496dp"
        android:layout_marginLeft="496dp"
        android:layout_marginTop="80dp"
        android:text="@string/OuantityText"
        android:textColor="@color/colorText"
        android:textSize="@dimen/front_size_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewOriginal"
        android:layout_width="108dp"
        android:layout_height="41dp"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:text="@string/OriginalText"
        android:textColor="@color/colorText"
        android:textSize="@dimen/front_size_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonPlusOriQ" />

    <TextView
        android:id="@+id/textViewSuperHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:text="@string/SuperHotText"
        android:textColor="@color/colorText"
        android:textSize="@dimen/front_size_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonPlusSHQ" />

    <TextView
        android:id="@+id/textViewShrimp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="16dp"
        android:text="@string/ShrimpText"
        android:textColor="@color/colorText"
        android:textSize="@dimen/front_size_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonPlusShrimpQ" />

    <TextView
        android:id="@+id/textViewWhitebait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="20dp"
        android:text="@string/WhitebaitText"
        android:textColor="@color/colorText"
        android:textSize="@dimen/front_size_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonPlusWhitebaitQ" />

    <TextView
        android:id="@+id/textViewSpicyGarlic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="40dp"
        android:text="@string/SpicyGarlicText"
        android:textColor="@color/colorText"
        android:textSize="@dimen/front_size_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlusWhitebaitQ" />

    <Button
        android:id="@+id/buttonPlusOriQ"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorBtnPlusMinus"
        android:text="@string/ButtonPlus"
        app:layout_constraintEnd_toStartOf="@+id/editTextQOri"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewOriginal"
        app:layout_constraintTop_toTopOf="@+id/editTextQOri" />

    <EditText
        android:id="@+id/editTextQOri"
        android:layout_width="79dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textViewQuantity"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuantity" />

    <Button
        android:id="@+id/buttonMinusOriQ"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorBtnPlusMinus"
        android:text="@string/ButtonMinus"
        app:layout_constraintStart_toEndOf="@+id/editTextQOri"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuantity" />

    <Button
        android:id="@+id/buttonPlusSHQ"
        android:layout_width="68dp"
        android:layout_height="68dp"
