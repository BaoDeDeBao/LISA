        app:layout_constraintTop_toTopOf="@+id/editTextQSH" />

    <EditText
        android:id="@+id/editTextQSH"
        android:layout_width="79dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorWhite"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextQOri"
        app:layout_constraintTop_toBottomOf="@+id/editTextQOri" />

    <Button
        android:id="@+id/buttonMinusSHQ"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorBtnPlusMinus"
        android:text="@string/ButtonMinus"
        app:layout_constraintStart_toEndOf="@+id/editTextQSH"
        app:layout_constraintTop_toTopOf="@+id/editTextQSH" />

    <Button
        android:id="@+id/buttonPlusShrimpQ"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorBtnPlusMinus"
        android:text="@string/ButtonPlus"
        app:layout_constraintEnd_toStartOf="@+id/editTextQShrimp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewShrimp"
        app:layout_constraintTop_toTopOf="@+id/editTextQShrimp" />

    <EditText
        android:id="@+id/editTextQShrimp"
        android:layout_width="79dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorWhite"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextQSH"
        app:layout_constraintTop_toBottomOf="@+id/editTextQSH" />

    <Button
        android:id="@+id/buttonMinusShrimpQ"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:background="@color/colorBtnPlusMinus"
        android:text="@string/ButtonMinus"
        app:layout_constraintStart_toEndOf="@+id/editTextQShrimp"
        app:layout_constraintTop_toTopOf="@+id/editTextQShrimp" />

    <Button
        android:id="@+id/buttonPlusWhitebaitQ"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorBtnPlusMinus"
        android:text="@string/ButtonPlus"
        app:layout_constraintEnd_toStartOf="@+id/editTextQWhitebait"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewWhitebait"
        app:layout_constraintTop_toTopOf="@+id/editTextQWhitebait" />

    <EditText
        android:id="@+id/editTextQWhitebait"
        android:layout_width="79dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorWhite"
